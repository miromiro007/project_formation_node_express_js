<h2>Nouveau mot de passe</h2>
<form action="/reset-password" method="POST">
    <input type="hidden" name="email" value="<%= email %>">
    <input type="hidden" name="code" value="<%= code %>">
    <input type="password" name="password" placeholder="Nouveau mot de passe (min 8 caractÃ¨res)" required minlength="8">
    <input type="password" name="confirmPassword" placeholder="Confirmer le mot de passe" required minlength="8">
    <button>Changer le mot de passe</button>
</form>
<% if (error) { %><p style="color:red"><%= error %></p><% } %>
